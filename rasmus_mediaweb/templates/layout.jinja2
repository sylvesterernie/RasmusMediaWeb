<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="utf-8">
  <meta name="description" content="">
  <meta name="author" content="">

  <title>RasmusMediaWeb :: {% block title %}Dashboard{% endblock %}</title>

  <!-- Bootstrap core CSS -->
  <link
      href="{{ 'rasmus_mediaweb:static/libs/bootstrap-3.1.1/css/bootstrap.min.css'|static_url }}"
      rel="stylesheet">

  <link href="{{ 'rasmus_mediaweb:static/css/style.css'|static_url }}"
        rel="stylesheet">

  <!-- HTML5 shim and Respond.js IE8 support of HTML5 elements and media queries -->
  <!--[if lt IE 9]>
      <script src="https://oss.maxcdn.com/libs/html5shiv/3.7.0/html5shiv.js"></script>
      <script src="https://oss.maxcdn.com/libs/respond.js/1.4.2/respond.min.js"></script>
    <![endif]-->

  {% include "globs.jinja2" %}

  {% block head_footer %}{% endblock %}
</head>

<body>
<div class="navbar navbar-inverse navbar-fixed-top" role="navigation">
  <div class="container-fluid">
    <div class="navbar-header">
      <button type="button" class="navbar-toggle" data-toggle="collapse"
              data-target=".navbar-collapse">
        <span class="sr-only">Toggle navigation</span>
        <span class="icon-bar"></span>
        <span class="icon-bar"></span>
        <span class="icon-bar"></span>
      </button>
      <a class="navbar-brand"
         href="{{ 'dashboard'|route_url }}">RamusMediaWeb</a>
    </div>
    <div class="collapse navbar-collapse">
      <ul class="nav navbar-nav">
        <li class="nav-item"><a class="nav-link"
                                href="{{ 'dashboard'|route_url }}">Dashboard</a>
        </li>
        <li class="nav-item"><a class="nav-link" href="{{ 'media'|route_url }}">Media</a>
        </li>
        <li class="nav-item"><a class="nav-link"
                                href="{{ 'transmission'|route_url }}">Transmission</a>
        </li>
        <!-- TODO: finish find_media -->
        <!--
        <li class="nav-item"><a class="nav-link"
                                href="{{ 'find_media'|route_url }}">Find Media</a>
        </li>
        -->
      </ul>
    </div>
    <!--/.nav-collapse -->
  </div>
</div>

<script>
  var tags = document.getElementsByClassName('nav-link');
  for (var x = 0; x < tags.length; x++) {
    var tag = tags[x];
    var current = location.origin + location.pathname;
    if (tag.attributes.href.value == current) {
      var parent = tag.parentNode;
      parent.className = parent.className + ' active';
    }
  }
</script>

<div class="container-fluid main">
  {% block main %}{% endblock %}
</div>
<!-- /.container -->

{% include "config.jinja2" %}

{% block body_footer %}
{% endblock %}
</body>
</html>
